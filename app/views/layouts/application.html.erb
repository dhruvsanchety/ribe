<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700,800" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
    
      <body style="background-color:#FFFAFA">
        <% unless (controller_name=="sessions" && action_name=='new') || (controller_name=="registrations" && action_name=='new') || (controller_name=="passwords" && action_name=='new') %>
        
          <nav class="navbar navbar-default navbar-static-top" role="navigation">
            <div class='container'>
              <div class="navbar-header">
                
                
               
                </button>
                <li><%= link_to root_path, class: "navbar-brand" do %>
                  
                    <i class="fas fa-running"></i>
                  
                <% end %></li>
              </div>
            <div class="collapse navbar-collapse" id="main-nav-collapse">
              <div class="nav navbar-nav navbar-right">
                
              </div>
              <ul class="nav navbar-nav navbar-right">
                
                <% if user_signed_in? %>
  
                  
                  <% if current_user.profile %>
                    <li><%= form_tag user_post_path(user_id: current_user.id), :method => :get do %>
                    <p>
                    <%= text_field_tag :search, params[:search], autocomplete: "off", placeholder: "Try \"Tennis\"", class: 'searchbar' %>
                    <button type="submit"><i class="fa fa-search"></i>
                    <% end %></li>
                    <li><%= link_to new_user_post_path(user_id: current_user.id), class: "navbar-brand" do %>
                      <i class="fas fa-plus"></i>
                    <% end %></li>
                    
                    <li><%= link_to new_user_post_path(user_id: current_user.id), class: "navbar-brand" do %>
                      <i class="fas fa-comment"></i>
                    <% end %></li>
                    <li><%= link_to user_path(id:current_user.id), class: "navbar-brand" do %>
                      <i class="fas fa-user"></i>
                    <% end %></li>
                    
                  <% else %>
                    <li><%= link_to "Create Profile", new_user_profile_path(user_id: current_user.id), class: "linkfocus"%></li>
                  <% end %>
                  <li><%= link_to "Log Out", destroy_user_session_path, method: :delete%></li>
                  <% else %>
                    <li><%= link_to "Log In", new_user_session_path, class: "linkfocus"%></li>
                    <li><%= link_to "Sign Up", new_user_registration_path, class: "linkfocus"%></li>
                <% end %>
                
              </ul>
              
            </div><!-- /.navbar-collapse -->
          </div>
        
      </nav>
      <% end %>
      <div class="container">
      
      <%= yield %>
      </div>
    </body>
  
</html>
